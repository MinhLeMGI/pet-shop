<section class="custom-section">
  <h2>{{ section.settings.heading }}</h2>
  <p>{{ section.settings.content }}</p>
</section>

{% schema %}
{
  "name": "Custom Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to my custom section"
    },
    {
      "type": "textarea",
      "id": "content",
      "label": "Content",
      "default": "This is a custom section that you can add to your templates."
    }
  ]
}
{% endschema %}
